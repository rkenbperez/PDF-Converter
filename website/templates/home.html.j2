{% extends "base.html.j2" %}

{% block content %}

    <div id="upload-container" class="p-[188px] pt-[148px] items-center">
            <div class="flex flex-row items-center justify-center gap-4 h-full">
                <form action="/convert" enctype="multipart/form-data" method="post">
                    <main class="flex flex-row items-center justify-center bg-zinc-950 font-sans rounded-[24px] w-[1472px] h-[400px]">
                        
                        <!-- File Input (Hidden) -->
                        <input type="file" id="dropzone-file" name="files" multiple accept="image/*" class="hidden">
                        
                        <!-- Label acts as clickable area -->
                        <label for="dropzone-file" class="w-[1472px] h-[400px] flex flex-row items-center justify-center gap-[20px] cursor-pointer rounded-[24px] border-2 border-dashed border-blue-400 p-6 text-center text-white hover:border-blue-300 transition-colors">
                            <h1 class="text-xl">Drop your files here</h1>
                            <h1 class="text-lg text-gray-300">or</h1>
                            <h1 class="text-xl text-blue-400">Click to upload files</h1>
                        </label>           
                    </main>
                </form>
            </div>
        <div class="flex justify-center mt-8">
            <!-- Submit Button (appears after files selected) -->
            <button type="submit" id="submit-btn" class="hidden mt-4 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg">
                Convert to PDF
            </button>
        </div>
        <!-- Display selected files -->
        <div id="file-display" class="hidden p-8 max-w-4xl mx-auto">
            <h3 class="text-lg font-semibold mb-4">Selected Files:</h3>
            <div id="file-list"></div>
        </div>
    </div>

</body>
</html>

{% endblock %}